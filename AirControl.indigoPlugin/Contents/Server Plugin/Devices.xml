<?xml version="1.0"?>
<Devices>
	<Device type="custom" id="appletv">
		<Name>Jailbroken AppleTV</Name>
		<ConfigUI>
			<Field id="address" type="textfield">
				<Label>IP or Hostname:</Label>
			</Field>
		</ConfigUI>
		<States>
			<State id="playStatus">
				<ValueType>
					<List>
						<Option value="playing">Playing</Option>
						<Option value="stopped">Stopped</Option>
					</List>
				</ValueType>
				<TriggerLabel>Player Status Changed</TriggerLabel>
				<TriggerLabelPrefix>Player Status is</TriggerLabelPrefix>
				<ControlPageLabel>Current Player Status</ControlPageLabel>
				<ControlPageLabelPrefix>Player Status is</ControlPageLabelPrefix>
			</State>
			<State id="status">
				<ValueType>String</ValueType>
				<TriggerLabel>Media Type Changed</TriggerLabel>
				<ControlPageLabel>Current Media Type</ControlPageLabel>
			</State>
			<State id="type">
				<ValueType>String</ValueType>
				<TriggerLabel>Media Type Changed</TriggerLabel>
				<ControlPageLabel>Current Media Type</ControlPageLabel>
			</State>
			<State id="name">
				<ValueType>String</ValueType>
				<TriggerLabel>Media Name Changed</TriggerLabel>
				<ControlPageLabel>Current Media Name</ControlPageLabel>
			</State>
			<State id="overview">
				<ValueType>String</ValueType>
				<TriggerLabel>Media Overview Changed</TriggerLabel>
				<ControlPageLabel>Current Media Overview</ControlPageLabel>
			</State>
			<State id="studio">
				<ValueType>String</ValueType>
